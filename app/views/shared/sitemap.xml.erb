<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= @base_url %></loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <url>
    <loc><%= @base_url %><%= privacy_policy_path %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>

  <url>
    <loc><%= @base_url %><%= terms_of_service_path %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>

  <url>
    <loc><%= @base_url %><%= cookie_policy_path %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>

  <url>
    <loc><%= @base_url %><%= contact_us_path %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.4</priority>
  </url>

  <% %w[forward midfielder defender goalkeeper].each do |position| %>
  <url>
    <loc><%= @base_url %><%= players_path(position: position) %></loc>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  <% end %>

  <url>
    <loc><%= @base_url %><%= forecasters_path %></loc>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>
</urlset>
