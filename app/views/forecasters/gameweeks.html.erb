<% content_for :title, @page_title %>

<div class="container mx-auto px-2 md:px-4 py-4 md:py-8">
  <div class="mb-4 md:mb-6">
    <div class="flex items-center justify-between mb-3 md:mb-4">
      <div>
        <h1 class="text-xl md:text-3xl font-bold text-gray-800"><%= @user.username %></h1>
        <p class="text-base md:text-lg text-gray-600">Gameweek <%= @gameweek %> Forecasts</p>
      </div>
      <%= link_to forecaster_path(@user), class: "inline-flex items-center px-3 md:px-4 py-2 border border-gray-800 text-xs md:text-sm font-medium rounded-md text-black bg-white hover:bg-gray-50" do %>
        ‚Üê Back
      <% end %>
    </div>

    <!-- Gameweek Summary -->
    <%= render 'summary',
               forecast_count: @forecast_count,
               avg_total_score: @avg_total_score,
               gameweek_rank: @gameweek_rank,
               gameweek_total_forecasters: @gameweek_total_forecasters %>
  </div>

  <!-- 4 Column Grid for Positions -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 md:gap-4">
    <% ["goalkeeper", "defender", "midfielder", "forward"].each do |position| %>
      <% position_config = FantasyForecast::POSITION_CONFIG[position] %>
      <% forecasts = (@forecasts_by_position[position] || []).sort_by { |f| -(f.accuracy || 0) } %>
      <% required_slots = position_config[:slots] %>
      <% empty_slots = required_slots - forecasts.size %>

      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Position Header -->
        <div class="bg-gray-50 px-3 md:px-4 py-2 md:py-3 border-b border-gray-200">
          <h3 class="text-xs md:text-sm font-semibold text-gray-700 uppercase tracking-wider">
            <%= position_config[:display_name] %>
          </h3>
        </div>

        <!-- Players List -->
        <div class="divide-y divide-gray-200">
          <% forecasts.each do |forecast| %>
            <div class="px-3 md:px-4 py-2 md:py-3 hover:bg-gray-50">
              <div class="flex items-center justify-between space-x-2">
                <div class="flex-1 min-w-0">
                  <%= render PlayerCardComponent.new(player: forecast.player) %>
                </div>
                <div class="flex-shrink-0 text-right">
                  <%= render OpponentComponent.new(player: forecast.player, gameweek: @gameweek, matches_by_team: @matches_by_team) %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Empty slots -->
          <% empty_slots.times do %>
            <div class="px-3 md:px-4 py-2 md:py-3 bg-gray-50">
              <%= render PlayerCardComponent.new(player: nil) %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>