<% if forecast_count > 0 && avg_total_score.present? %>
  <%= render HeroComponent.new do %>
    <div class="grid grid-cols-2 gap-4">
      <% if defined?(gameweek_rank) && gameweek_rank && defined?(gameweek_total_forecasters) && gameweek_total_forecasters %>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-gray-900">#<%= gameweek_rank %></div>
          <div class="text-xs md:text-sm text-gray-700">Rank</div>
        </div>
      <% end %>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-gray-900"><%= (avg_total_score * 100).round(2) %>%</div>
        <div class="text-xs md:text-sm text-gray-700">Accuracy</div>
      </div>
    </div>
  <% end %>
<% end %>
