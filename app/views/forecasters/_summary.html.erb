<% if forecast_count > 0 && avg_accuracy_score.present? %>
  <%= render HeroComponent.new do %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% if defined?(gameweek_rank) && gameweek_rank && defined?(gameweek_total_forecasters) && gameweek_total_forecasters %>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-gray-800"><%= gameweek_rank %></div>
          <div class="text-xs md:text-sm text-gray-700">Rank</div>
        </div>
      <% end %>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-gray-800"><%= forecast_count %></div>
        <div class="text-xs md:text-sm text-gray-700">Forecasts</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-gray-800"><%= (avg_accuracy_score * 100).round(1) %>%</div>
        <div class="text-xs md:text-sm text-gray-700">Accuracy</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-gray-800"><%= avg_total_score.round(2) %></div>
        <div class="text-xs md:text-sm text-gray-700">Score</div>
      </div>
    </div>
  <% end %>
<% end %>
