<% content_for :title, @page_title %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @page_title %></h1>
    <p class="text-lg text-gray-600">
      See how forecasters rank based on their prediction accuracy and contrarian insights.
      Recent forecasts are weighted more heavily to reflect current form.
    </p>
  </div>

  <!-- Rankings Table -->
  <% if @rankings.any? %>
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Forecaster</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Weighted Score</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Total Score</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Accuracy</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Contrarian</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Forecasts</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Weeks</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @rankings.each_with_index do |ranking, index| %>
            <tr class="<%= index < 3 ? 'bg-yellow-50' : 'hover:bg-gray-50' %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <% if ranking[:rank] <= 3 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= ranking[:rank] == 1 ? 'bg-yellow-100 text-yellow-800' :
                          ranking[:rank] == 2 ? 'bg-gray-100 text-gray-800' :
                          'bg-orange-100 text-orange-800' %>">
                      #<%= ranking[:rank] %>
                    </span>
                  <% else %>
                    <span class="text-sm font-medium text-gray-900">#<%= ranking[:rank] %></span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to user_path(ranking[:user_id]),
                    class: "text-sm font-medium text-blue-600 hover:text-blue-900" do %>
                  <%= ranking[:username] %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-lg font-bold text-blue-600"><%= ranking[:weighted_score].round(2) %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-sm text-gray-700"><%= ranking[:total_score].round(2) %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-sm text-gray-700"><%= ranking[:accuracy_score].round(2) %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-sm text-gray-700"><%= ranking[:contrarian_bonus].round(2) %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-sm text-gray-700"><%= ranking[:forecast_count] %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="text-sm text-gray-700"><%= ranking[:gameweeks_participated] %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Legend -->
    <div class="mt-4 text-xs text-gray-600">
      <p><strong>Weighted Score:</strong> Total score with recent weeks weighted more heavily (used for ranking)</p>
      <p><strong>Total Score:</strong> Combined accuracy and contrarian bonus points across all weeks</p>
      <p><strong>Accuracy:</strong> Points based on how well predicted players actually performed</p>
      <p><strong>Contrarian:</strong> Bonus points for picking unpopular players or avoiding popular busts</p>
    </div>
  <% else %>
    <div class="bg-white shadow-sm rounded-lg p-8 text-center">
      <p class="text-gray-500 text-lg">No forecaster rankings available yet.</p>
      <p class="text-gray-400 text-sm mt-2">Rankings will appear once forecasts have been scored against performance data.</p>
    </div>
  <% end %>
</div>