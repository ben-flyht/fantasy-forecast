<!-- Hero Section -->
<section class="py-8 md:py-16 px-4 text-center bg-amber-200 rounded-lg mb-8 md:mb-12">
  <h1 class="text-3xl md:text-5xl font-bold text-gray-800 mb-4 md:mb-6 px-2">
