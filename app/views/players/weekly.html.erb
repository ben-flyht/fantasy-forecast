<% content_for :title, @page_title %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Forecaster Consensus</h1>
          <p class="mt-2 text-gray-600">Weekly forecasts aggregated from all forecasters</p>
        </div>

        <!-- Week Selection -->
        <div class="mt-4 sm:mt-0">
          <%= form_with url: consensus_weekly_path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
            <%= form.label :week, "Week:", class: "text-sm font-medium text-gray-700" %>
            <%= form.select :week,
                options_for_select(@available_weeks.map { |w| [w, w] }, @week),
                {},
                {
                  class: "border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  onchange: "this.form.submit();"
                } %>
          <% end %>
        </div>
      </div>

      <div class="mt-4 text-sm text-gray-500">
        Currently viewing: <span class="font-semibold text-gray-900">Week <%= @week %></span>
      </div>
    </div>

    <!-- Consensus Data -->
    <% if @consensus_rankings.any? %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Must Have Category -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="bg-green-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Must Have
            </h2>
          </div>
          <div class="p-6">
            <% if @consensus_data["must_have"].any? %>
              <div class="space-y-4">
                <% @consensus_data["must_have"].each_with_index do |player_data, index| %>
                  <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg border border-green-200">
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">
                        <%= index + 1 %>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900"><%= player_data[:player].name %></div>
                        <div class="text-sm text-gray-600">
                          <%= player_data[:player].team %> • <%= player_data[:player].position %>
                        </div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-lg font-bold text-green-600"><%= player_data[:votes] %></div>
                      <div class="text-xs text-gray-500">
                        <%= pluralize(player_data[:votes], 'vote') %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500">No predictions in this category yet</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Better Than Expected Category -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="bg-blue-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
              Better Than Expected
            </h2>
          </div>
          <div class="p-6">
            <% if @consensus_data["better_than_expected"].any? %>
              <div class="space-y-4">
                <% @consensus_data["better_than_expected"].each_with_index do |player_data, index| %>
                  <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg border border-blue-200">
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">
                        <%= index + 1 %>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900"><%= player_data[:player].name %></div>
                        <div class="text-sm text-gray-600">
                          <%= player_data[:player].team %> • <%= player_data[:player].position %>
                        </div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-lg font-bold text-blue-600"><%= player_data[:votes] %></div>
                      <div class="text-xs text-gray-500">
                        <%= pluralize(player_data[:votes], 'vote') %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500">No predictions in this category yet</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Worse Than Expected Category -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="bg-red-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              Worse Than Expected
            </h2>
          </div>
          <div class="p-6">
            <% if @consensus_data["worse_than_expected"].any? %>
              <div class="space-y-4">
                <% @consensus_data["worse_than_expected"].each_with_index do |player_data, index| %>
                  <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg border border-red-200">
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-red-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">
                        <%= index + 1 %>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900"><%= player_data[:player].name %></div>
                        <div class="text-sm text-gray-600">
                          <%= player_data[:player].team %> • <%= player_data[:player].position %>
                        </div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-lg font-bold text-red-600"><%= player_data[:votes] %></div>
                      <div class="text-xs text-gray-500">
                        <%= pluralize(player_data[:votes], 'vote') %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500">No predictions in this category yet</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white shadow rounded-lg p-12 text-center">
        <svg class="w-20 h-20 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No Consensus Data</h3>
        <p class="text-gray-600 mb-6">There are no predictions for Week <%= @week %> yet.</p>
      </div>
    <% end %>

  </div>
</div>