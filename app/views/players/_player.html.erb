<div id="<%= dom_id player %>" class="bg-white p-6 rounded-lg shadow-md border border-gray-200 w-full">
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div>
      <strong class="block font-medium mb-1 text-gray-700">Name:</strong>
      <span class="text-gray-900"><%= player.name %></span>
    </div>
    <div>
      <strong class="block font-medium mb-1 text-gray-700">Team:</strong>
      <span class="text-gray-900"><%= player.team %></span>
    </div>
    <div>
      <strong class="block font-medium mb-1 text-gray-700">Position:</strong>
      <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full
        <%= case player.position
            when 'GK' then 'bg-yellow-100 text-yellow-800'
            when 'DEF' then 'bg-blue-100 text-blue-800'
            when 'MID' then 'bg-green-100 text-green-800'
            when 'FWD' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= player.position %>
      </span>
    </div>
    <div>
      <strong class="block font-medium mb-1 text-gray-700">Short Name:</strong>
      <span class="text-gray-900"><%= player.short_name || 'N/A' %></span>
    </div>
    <div>
      <strong class="block font-medium mb-1 text-gray-700">FPL ID:</strong>
      <span class="text-gray-900"><%= player.fpl_id %></span>
    </div>
  </div>
</div>
