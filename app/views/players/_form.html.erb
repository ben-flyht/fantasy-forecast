<%= form_with(model: player, class: "contents") do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul class="list-disc ml-6">
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:name].none?, "border-red-400 focus:outline-red-600": player.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :team %>
    <%= form.text_field :team, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:team].none?, "border-red-400 focus:outline-red-600": player.errors[:team].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.select :position, options_for_select([
          ['Goalkeeper', 'GK'],
          ['Defender', 'DEF'],
          ['Midfielder', 'MID'],
          ['Forward', 'FWD']
        ], player.position),
        { prompt: 'Select a position' },
        { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:position].none?, "border-red-400 focus:outline-red-600": player.errors[:position].any?}] } %>
  </div>

  <div class="my-5">
    <%= form.label :bye_week %>
    <%= form.number_field :bye_week, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:bye_week].none?, "border-red-400 focus:outline-red-600": player.errors[:bye_week].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :fpl_id %>
    <%= form.number_field :fpl_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:fpl_id].none?, "border-red-400 focus:outline-red-600": player.errors[:fpl_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
