<% content_for :title, "Log in" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Log in</h2>
      </div>

      <div class="px-6 py-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-6 flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-amber-500 focus:ring-amber-400 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>

          <div class="mb-6">
            <%= f.submit "Log in", class: "w-full bg-amber-200 hover:bg-amber-300 text-gray-800 font-semibold py-2 px-4 rounded-md transition-colors cursor-pointer" %>
          </div>
        <% end %>

        <div class="text-sm text-gray-600 space-y-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
