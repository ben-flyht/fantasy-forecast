<% content_for :title, "Manage Account" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Manage Account</h2>
      </div>

      <div class="px-6 py-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "off", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
            <p class="text-xs text-gray-500 mt-1">Letters and numbers only (no spaces or special characters)</p>
          </div>

          <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-4 p-3 bg-amber-50 border border-amber-200 rounded-md text-sm text-amber-800">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <span class="text-xs text-gray-500">(leave blank if you don't want to change it)</span>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
          </div>

          <div class="mb-6">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <span class="text-xs text-gray-500">(we need your current password to confirm your changes)</span>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-400" %>
          </div>

          <div class="mb-6">
            <%= f.submit "Update", class: "w-full bg-amber-200 hover:bg-amber-300 text-gray-800 font-semibold py-2 px-4 rounded-md transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-red-50 border-b border-red-200">
        <h3 class="text-lg font-semibold text-red-800">Cancel my account</h3>
      </div>

      <div class="px-6 py-6">
        <p class="text-sm text-gray-600 mb-4">Unhappy with your account? You can delete it below.</p>
        <%= button_to "Cancel my account",
            registration_path(resource_name),
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            method: :delete,
            class: "w-full bg-red-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-red-700 transition-colors cursor-pointer" %>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "Back", :back, class: "text-sm text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>
