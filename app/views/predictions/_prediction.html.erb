<div id="<%= dom_id prediction %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= prediction.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Player:</strong>
    <%= prediction.player_id %>
  </div>
  <% if prediction.weekly? %>
    <div>
      <strong class="block font-medium mb-1">Gameweek:</strong>
      <%= prediction.gameweek&.name %>
    </div>
  <% end %>
  <div>
    <strong class="block font-medium mb-1">Season type:</strong>
    <%= prediction.season_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= prediction.category %>
  </div>
</div>
