<% content_for :title, "Predictions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">My Predictions</h1>
    <% unless current_user.admin? %>
      <%= link_to "Make Predictions", new_prediction_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <% if @grouped_predictions.any? %>
    <% @grouped_predictions.each do |category, predictions| %>
      <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4 flex items-center">
          <span class="inline-block w-4 h-4 rounded-full mr-3
            <%= case category
                when 'must_have' then 'bg-green-500'
                when 'better_than_expected' then 'bg-blue-500'
                when 'worse_than_expected' then 'bg-red-500'
                else 'bg-gray-500'
                end %>">
          </span>
          <%= category.humanize.titleize %>
          <span class="ml-2 text-sm text-gray-500 font-normal">(#{predictions.count})</span>
        </h2>

        <div class="grid gap-4">
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-4">
            <h3 class="text-lg font-medium mb-3 text-gray-800">
              Weekly Predictions
            </h3>

            <div class="grid gap-3">
              <% predictions.group_by(&:gameweek).compact.sort_by { |gw, _| gw&.fpl_id || 0 }.each do |gameweek, gameweek_predictions| %>
                <div class="border-l-4 border-blue-200 pl-4">
                  <h4 class="font-medium text-gray-700 mb-2"><%= gameweek&.name || 'Unknown Gameweek' %></h4>
                  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-2">
                    <% gameweek_predictions.each do |prediction| %>
                      <%= render 'prediction_card', prediction: prediction %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 text-6xl mb-4">ðŸ”®</div>
      <h3 class="text-xl font-medium text-gray-700 mb-2">No predictions yet</h3>
      <p class="text-gray-500 mb-6">Start making predictions about your favorite players!</p>
      <% unless current_user.admin? %>
        <%= link_to "Make your first prediction", new_prediction_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      <% end %>
    </div>
  <% end %>
</div>
