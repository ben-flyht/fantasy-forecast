<div id="<%= dom_id forecast %>" class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900">Forecast Details</h3>
  </div>

  <div class="px-6 py-4 space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h4 class="text-sm font-medium text-gray-700 mb-2">Player</h4>
        <div class="bg-gray-50 rounded-lg p-3">
          <p class="text-lg font-semibold text-gray-900"><%= forecast.player.full_name %></p>
          <p class="text-sm text-gray-600"><%= forecast.player.team %></p>
          <span class="inline-block px-2 py-1 text-xs font-medium rounded-full mt-2
            <%= case forecast.player.position
                when 'goalkeeper' then 'bg-yellow-100 text-yellow-800'
                when 'defender' then 'bg-blue-100 text-blue-800'
                when 'midfielder' then 'bg-green-100 text-green-800'
                when 'forward' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= forecast.player.position.upcase %>
          </span>
        </div>
      </div>

      <div>
        <h4 class="text-sm font-medium text-gray-700 mb-2">Forecast</h4>
        <div class="bg-gray-50 rounded-lg p-3">
          <span class="inline-block px-3 py-1 text-sm font-medium rounded-full
            <%= forecast.category == 'target' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= forecast.category == 'target' ? 'Target XI (Recommend)' : 'Avoid (Don\'t Recommend)' %>
          </span>
        </div>
      </div>
    </div>

    <div>
      <h4 class="text-sm font-medium text-gray-700 mb-2">Gameweek</h4>
      <div class="bg-gray-50 rounded-lg p-3">
        <p class="text-sm text-gray-900"><%= forecast.gameweek.name %></p>
        <p class="text-xs text-gray-600">
          <%= forecast.gameweek.start_time.strftime("%b %d, %Y") %>
          <% if forecast.gameweek.end_time %>
            - <%= forecast.gameweek.end_time.strftime("%b %d, %Y") %>
          <% end %>
        </p>
      </div>
    </div>

    <% if current_user.admin? %>
      <div>
        <h4 class="text-sm font-medium text-gray-700 mb-2">Created by</h4>
        <div class="bg-gray-50 rounded-lg p-3">
          <p class="text-sm text-gray-900"><%= forecast.user.username %></p>
          <p class="text-xs text-gray-600">
            Created <%= time_ago_in_words(forecast.created_at) %> ago
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
