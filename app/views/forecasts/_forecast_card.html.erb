<div class="bg-gray-50 rounded-lg p-3 border border-gray-200 hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start mb-2">
    <div class="flex-1">
      <h5 class="font-semibold text-gray-900 text-sm"><%= forecast.player.name %></h5>
      <p class="text-xs text-gray-600"><%= forecast.player.team %></p>
      <span class="inline-block px-2 py-1 text-xs font-medium rounded-full mt-1
        <%= case forecast.player.position
            when 'goalkeeper' then 'bg-yellow-100 text-yellow-800'
            when 'defender' then 'bg-blue-100 text-blue-800'
            when 'midfielder' then 'bg-green-100 text-green-800'
            when 'forward' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= forecast.player.position.upcase %>
      </span>
    </div>
  </div>

  <% if current_user.admin? %>
    <p class="text-xs text-gray-500 mb-2">by <%= forecast.user.username %></p>
  <% end %>

  <div class="flex justify-between items-center mt-3">
    <div class="flex space-x-1">
      <% if forecast.user == current_user && !current_user.admin? %>
        <%= link_to "Edit", edit_forecast_path(forecast), class: "text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded hover:bg-blue-200" %>
        <%= link_to "Delete", forecast_path(forecast), method: :delete,
            class: "text-xs px-2 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200",
            data: { turbo_confirm: "Are you sure?" } %>
      <% else %>
        <%= link_to "View", forecast_path(forecast), class: "text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
      <% end %>
    </div>
  </div>
</div>