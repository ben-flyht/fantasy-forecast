<%= form_with(model: forecast, class: "contents") do |form| %>
  <% if forecast.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(forecast.errors.count, "error") %> prohibited this forecast from being saved:</h2>

      <ul class="list-disc ml-6">
        <% forecast.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :player_id, "Player" %>
    <%= form.select :player_id,
        options_from_collection_for_select(Player.order(:first_name, :last_name), :id,
          proc { |p| "#{p.name} (#{p.team} - #{p.position})" }, forecast.player_id),
        { prompt: 'Select a player' },
        { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": forecast.errors[:player_id].none?, "border-red-400 focus:outline-red-600": forecast.errors[:player_id].any?}] } %>
  </div>

  <div class="my-5" id="gameweek-info">
    <% if defined?(@current_gameweek) && @current_gameweek %>
      <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
        <h3 class="font-medium text-blue-900 mb-2">Making forecasts for:</h3>
        <p class="text-blue-800"><strong><%= @current_gameweek.name %></strong></p>
        <p class="text-sm text-blue-600 mt-1">
          Starts: <%= @current_gameweek.start_time.strftime("%b %d, %Y at %l:%M %p") %>
        </p>
        <% if @current_gameweek.end_time %>
          <p class="text-sm text-blue-600">
            Ends: <%= @current_gameweek.end_time.strftime("%b %d, %Y at %l:%M %p") %>
          </p>
        <% end %>
      </div>
    <% else %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <p class="text-yellow-800">
          <strong>No upcoming gameweek available.</strong>
          Please contact an administrator to sync gameweeks from the FPL API.
        </p>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :category %>
    <%= form.select :category,
        options_for_select([
          ['Target XI (Recommend)', 'target'],
          ['Avoid XI (Don\'t Recommend)', 'avoid']
        ], forecast.category),
        { prompt: 'Select forecast category' },
        { class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": forecast.errors[:category].none?, "border-red-400 focus:outline-red-600": forecast.errors[:category].any?}] } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
