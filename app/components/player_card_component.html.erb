<% if @player %>
  <div class="flex items-center space-x-2 md:space-x-4">
    <div class="w-8 h-8 md:w-16 md:h-16 flex-shrink-0">
      <% if @player.photo_url %>
        <img src="<%= @player.photo_url(size: '40x40') %>" alt="<%= @player.name %>" class="w-8 h-8 md:w-16 md:h-16 rounded-full object-cover" onerror="this.style.display='none'">
      <% end %>
    </div>
    <div class="flex flex-col min-w-0">
      <span class="text-xs text-gray-800 break-words"><%= @player.first_name %></span>
      <span class="text-sm md:text-lg font-bold text-gray-800 break-words"><%= @player.last_name %></span>
      <% if @player.team %>
        <div class="flex flex-wrap items-center gap-1 mt-0.5">
          <span class="text-xs px-2 py-0.5 rounded border border-gray-200 bg-gray-50 text-gray-800 whitespace-nowrap"><%= @player.team.name %></span>
          <% if show_status_info? %>
            <span class="text-xs px-2 py-0.5 rounded <%= status_badge_class %> whitespace-nowrap">
              <%= status_text %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="flex items-center space-x-2 md:space-x-4">
    <div class="w-8 h-8 md:w-16 md:h-16 flex-shrink-0 bg-gray-200 rounded-full"></div>
    <div class="flex flex-col min-w-0">
      <span class="text-sm md:text-lg font-bold text-gray-400 break-words">Not selected</span>
      <%= link_to "Select", @selection_url || "#", class: "text-xs text-gray-800 hover:text-gray-600 underline" %>
    </div>
  </div>
<% end %>
